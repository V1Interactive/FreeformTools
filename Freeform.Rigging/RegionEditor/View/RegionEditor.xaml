<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:v1="clr-namespace:HelixResources.Style;assembly=HelixResources" 
        xmlns:local="clr-namespace:Freeform.Rigging.RegionEditor"
        x:Class="Freeform.Rigging.RegionEditor.RegionEditor" 
        WindowStartupLocation="CenterScreen"
        Title="Region Editor" 
        Height="450" 
        Width="300" 
        WindowStyle="ToolWindow">
    <Window.Resources>
        <ResourceDictionary>
            <v1:StyleConverter  x:Key="StyleConverter"/>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/HelixResources;component/Style/V1ResourceDictionary.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid Style="{StaticResource SelectedGrid}" Margin="0,4" Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Style="{StaticResource DarkTextBlock}" Text="{Binding CharacterName}" Margin="10,2,0,2" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center" Grid.Column="1"/>
        </Grid>
        
        <Grid Margin="0,2" Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="Filter: " Margin="10,2,0,2" HorizontalAlignment="Left" Grid.Column="0"/>
            <TextBox Text="{Binding RegionSearchFilter, UpdateSourceTrigger=PropertyChanged}" Margin="4,2,10,2" Grid.Column="1"/>
            <CheckBox Content="Highlight" IsChecked="{Binding HighlightRegions}" Margin="10,2,20,2" Grid.Column="2"/>
        </Grid>

        <Expander Style="{StaticResource SubExpander}" 
                  Header="Mirror Filtered Regions" 
                  IsExpanded="False" 
                  ExpandDirection="Down" 
                  Grid.Row="2">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="Replace:" 
                                   Width="80" 
                                   Margin="4,4,0,4" 
                                   Grid.Column="0"/>
                        <TextBox Text="{Binding MirrorReplaceText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                 Margin="0,4,4,4" 
                                 Grid.Column="1">
                            <TextBox.ToolTip>
                                <TextBlock Text="The string in the side of the region to search for" Style="{StaticResource HighlightTextBlock}"/>
                            </TextBox.ToolTip>
                        </TextBox>
                        <TextBox Text="{Binding JointReplaceText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                 Margin="10,4" 
                                 Grid.Column="2">
                            <TextBox.ToolTip>
                                <TextBlock Text="The string in the side of the region to replace with" Style="{StaticResource HighlightTextBlock}"/>
                            </TextBox.ToolTip>
                        </TextBox>
                    </Grid>

                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="Replace With:" 
                                   Width="80" 
                                   Margin="4,4,0,4" 
                                   Grid.Column="0"/>
                        <TextBox Text="{Binding MirrorReplaceWithText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                 Margin="0,4,4,4" 
                                 Grid.Column="1">
                            <TextBox.ToolTip>
                                <TextBlock Text="The string in the joint name to search for" Style="{StaticResource HighlightTextBlock}"/>
                            </TextBox.ToolTip>
                        </TextBox>
                        <TextBox Text="{Binding JointReplaceWithText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                 Margin="10,4" 
                                 Grid.Column="2">
                            <TextBox.ToolTip>
                                <TextBlock Text="The string in the joint name to replace" Style="{StaticResource HighlightTextBlock}"/>
                            </TextBox.ToolTip>
                        </TextBox>
                    </Grid>
                </Grid>

                <Button Content="Mirror" 
                        Command="{Binding MirrorFilteredRegionCommand}"
                        Height="30"
                        Width="46"
                        Margin="0,4,6,4"
                        Grid.Column="1"/>
            </Grid>
        </Expander>

        <ScrollViewer HorizontalContentAlignment="Stretch" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Margin="0,3" Grid.Row="3">
            <ListBox HorizontalContentAlignment="Stretch" SelectionMode="Single" ItemsSource="{Binding Path=RegionListViewSource.View}" SelectedItem="{Binding Path=SelectedRegionItem, UpdateSourceTrigger=PropertyChanged}" Background="#FFE5E5E5">
                <ListBox.Template>
                    <ControlTemplate>
                        <ItemsPresenter/>
                    </ControlTemplate>
                </ListBox.Template>
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.Style>
                                <MultiBinding Converter="{StaticResource StyleConverter}">
                                    <MultiBinding.Bindings>
                                        <Binding RelativeSource="{RelativeSource Self}"/>
                                        <Binding Path="GridStyle"/>
                                    </MultiBinding.Bindings>
                                </MultiBinding>
                            </Grid.Style>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Border BorderBrush="{x:Null}" Height="20" HorizontalAlignment="Left" Margin="8,0" Grid.Column="0">
                                <TextBlock VerticalAlignment="Center">
                                    <TextBlock.Text>
                                        <MultiBinding StringFormat="{}{0} {1}">
                                            <Binding Path="Side" />
                                            <Binding Path="Name" />
                                        </MultiBinding>
                                    </TextBlock.Text>
                                </TextBlock>
                            </Border>
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
                <ListBox.ItemContainerStyle>
                    <Style TargetType="{x:Type ListBoxItem}">
                        <Setter Property="IsSelected" Value="{Binding Path=IsSelected, Mode=TwoWay}"/>
                    </Style>
                </ListBox.ItemContainerStyle>
            </ListBox>
        </ScrollViewer>

        <Grid Grid.Row="4">
            <Grid.Style>
                <MultiBinding Converter="{StaticResource StyleConverter}">
                    <MultiBinding.Bindings>
                        <Binding RelativeSource="{RelativeSource Self}"/>
                        <Binding Path="GridStyle"/>
                    </MultiBinding.Bindings>
                </MultiBinding>
            </Grid.Style>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Grid.Style>
                    <MultiBinding Converter="{StaticResource StyleConverter}">
                        <MultiBinding.Bindings>
                            <Binding RelativeSource="{RelativeSource Self}"/>
                            <Binding Path="GridStyle"/>
                        </MultiBinding.Bindings>
                    </MultiBinding>
                </Grid.Style>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Side: " Margin="10,2,0,2" HorizontalAlignment="Left" Width="40" Grid.Column="0">
                    <TextBlock.Style>
                        <MultiBinding Converter="{StaticResource StyleConverter}">
                            <MultiBinding.Bindings>
                                <Binding RelativeSource="{RelativeSource Self}"/>
                                <Binding Path="TextStyle"/>
                            </MultiBinding.Bindings>
                        </MultiBinding>
                    </TextBlock.Style>
                </TextBlock>
                <TextBox Text="{Binding Side, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" Margin="4,2" Grid.Column="1"/>
                <TextBlock Text="Group: " Margin="10,2,0,2" HorizontalAlignment="Left" Grid.Column="2">
                    <TextBlock.Style>
                        <MultiBinding Converter="{StaticResource StyleConverter}">
                            <MultiBinding.Bindings>
                                <Binding RelativeSource="{RelativeSource Self}"/>
                                <Binding Path="TextStyle"/>
                            </MultiBinding.Bindings>
                        </MultiBinding>
                    </TextBlock.Style>
                </TextBlock>
                <TextBox Text="{Binding Group, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" Margin="4,2,10,2" Grid.Column="3"/>
            </Grid>
            <Grid Grid.Row="1">
                <Grid.Style>
                    <MultiBinding Converter="{StaticResource StyleConverter}">
                        <MultiBinding.Bindings>
                            <Binding RelativeSource="{RelativeSource Self}"/>
                            <Binding Path="GridStyle"/>
                        </MultiBinding.Bindings>
                    </MultiBinding>
                </Grid.Style>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Region: " Margin="10,2,0,2" HorizontalAlignment="Left" Width="40" Grid.Column="0">
                    <TextBlock.Style>
                        <MultiBinding Converter="{StaticResource StyleConverter}">
                            <MultiBinding.Bindings>
                                <Binding RelativeSource="{RelativeSource Self}"/>
                                <Binding Path="TextStyle"/>
                            </MultiBinding.Bindings>
                        </MultiBinding>
                    </TextBlock.Style>
                </TextBlock>
                <TextBox Text="{Binding Region, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" Margin="4,2,10,2" Grid.Column="1"/>
            </Grid>
            <Grid Grid.Row="2">
                <Grid.Style>
                    <MultiBinding Converter="{StaticResource StyleConverter}">
                        <MultiBinding.Bindings>
                            <Binding RelativeSource="{RelativeSource Self}"/>
                            <Binding Path="GridStyle"/>
                        </MultiBinding.Bindings>
                    </MultiBinding>
                </Grid.Style>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Root: " Margin="10,2,0,2" HorizontalAlignment="Left" Width="40" Grid.Column="0">
                    <TextBlock.Style>
                        <MultiBinding Converter="{StaticResource StyleConverter}">
                            <MultiBinding.Bindings>
                                <Binding RelativeSource="{RelativeSource Self}"/>
                                <Binding Path="TextStyle"/>
                            </MultiBinding.Bindings>
                        </MultiBinding>
                    </TextBlock.Style>
                </TextBlock>
                <TextBox Text="{Binding Root, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" 
                         IsEnabled="{Binding SelectionNotRigged}" 
                         Margin="4,2" 
                         Grid.Column="1"/>
                <Button Command="{Binding PickCommand}" 
                        CommandParameter="root" 
                        IsEnabled="{Binding SelectionNotRigged}"
                        Margin="10,2" 
                        Height="24" 
                        Grid.Column="2">
                    <Image Source="pack://application:,,,/HelixResources;component/Resources/pick.ico"/>
                </Button>
            </Grid>
            <Grid Grid.Row="3">
                <Grid.Style>
                    <MultiBinding Converter="{StaticResource StyleConverter}">
                        <MultiBinding.Bindings>
                            <Binding RelativeSource="{RelativeSource Self}"/>
                            <Binding Path="GridStyle"/>
                        </MultiBinding.Bindings>
                    </MultiBinding>
                </Grid.Style>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="End: " Margin="10,2,0,2" HorizontalAlignment="Left" Width="40" Grid.Column="0">
                    <TextBlock.Style>
                        <MultiBinding Converter="{StaticResource StyleConverter}">
                            <MultiBinding.Bindings>
                                <Binding RelativeSource="{RelativeSource Self}"/>
                                <Binding Path="TextStyle"/>
                            </MultiBinding.Bindings>
                        </MultiBinding>
                    </TextBlock.Style>
                </TextBlock>
                <TextBox Text="{Binding End, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" 
                         IsEnabled="{Binding SelectionNotRigged}"
                         Margin="4,2" 
                         Grid.Column="1"/>
                <Button Command="{Binding PickCommand}" 
                        CommandParameter="end" 
                        IsEnabled="{Binding SelectionNotRigged}"
                        Margin="10,2" 
                        Height="24" 
                        Grid.Column="2">
                    <Image Source="pack://application:,,,/HelixResources;component/Resources/pick.ico"/>
                </Button>
            </Grid>
        </Grid>

        <Grid Height="34" Margin="0,4" Grid.Row="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Button Style="{StaticResource TrimButton}" Content="Add" Command="{Binding AddRegionCommand}" IsEnabled="{Binding RegionIsNull}" Margin="10,2" Width="60" Grid.Column="0"/>
            <Button Style="{StaticResource TrimButton}" Content="Remove" Command="{Binding RemoveRegionCommand}" IsEnabled="{Binding RegionIsSelected}" Margin="0,2" Width="70" Grid.Column="1"/>
            <Button Style="{StaticResource TrimButton}" Content="New Region" Command="{Binding ClearSelectionCommand}" Margin="10,2" Width="100" Grid.Column="3"/>
        </Grid>
        
    </Grid>
</Window>
